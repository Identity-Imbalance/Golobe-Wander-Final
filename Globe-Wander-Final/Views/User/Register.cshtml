@model Globe_Wander_Final.Models.DTOs.RegisterUserDTO;


<section class="login">
    <div class="container">
        <div class="row">            
            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="login-content">
                    <h4>Create an Account</h4>
                    <form  method="post" asp-action="Register">
                        <div class="form-group">
                                <input type="text" asp-for="UserName" class="form-control" placeholder="Enter username">
                        </div>
                        <div class="form-group">
                            <input type="email" asp-for="Email" class="form-control" placeholder="Enter email address">
                        </div>
                        <div class="form-group">
                            <input type="password" asp-for="Password" class="form-control" placeholder="Enter password">
                        </div>
                        <div class="form-group">
                            <input type="number" asp-for="PhoneNumber" class="form-control" placeholder="Phone Number">
                        </div>
                         <div class="form-group">
                            <input type="text" asp-for="Roles" class="form-control" placeholder="Roles">
                        </div>
                       
                        <input type="submit" class="btn btn-primary" value="Sign Up" />
                    </form>
                    <div class="form-btn mar-bottom-20">
                        @* <a href="#" class="biz-btn biz-btn1">SIGN UP</a> *@
                    </div>
                    <ul class="social-links">
                        <li><a href="#"><i class="fab fa-facebook" aria-hidden="true"></i></a></li>
                        <li><a href="#"><i class="fab fa-twitter" aria-hidden="true"></i></a></li>
                        <li><a href="#"><i class="fab fa-instagram" aria-hidden="true"></i></a></li>
                        <li><a href="#"><i class="fab fa-linkedin" aria-hidden="true"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>


