@model Globe_Wander_Final.Models.DTOs.BookingTripDTO


    <!-- Breadcrumb -->
    <section class="breadcrumb-outer text-center">
        <div class="container">
            <div class="breadcrumb-content">
                <h2 class="white">Trip Booking</h2>
                <nav aria-label="breadcrumb">
                    <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Trip Booking</li>
                    </ul>
                </nav>
            </div>
        </div>
    <img style="object-fit:cover;" class="overlay" src="https://globewanderimages.blob.core.windows.net/globe-wander-images/pannertrip.jpg" alt="image" />
    </section>
    <!-- BreadCrumb Ends -->
<head>
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
</head>
    <!-- booking starts -->
<section class="booking">

    <div class="tab-content">
        <div class="tab-content centered-card">
            <!-- Add a class to the container -->
                            <div id="customer">
                <div class="booking-box" style="margin:60px;width:900px;">
                                    <div class="customer-information">
                                    <h3 style="color:lightgreen">Changed had been made successfully</h3>
                         
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                <label>Booking Changes Notification</label>
                                                  
                                                    </div>
                                                </div>
                                                <div class="col-md-12">
                                                    <div class="form-btn">
                                              
                                               
                                                    <p>Dear @User.Identity.Name,</p>
                                                    <p>We noticed that you recently edited a booking process on our platform and it hade been don successfuly . As a result, we were able to confirm your booking and it has been updated in  our system.</p>
                                                    <p>We understand that technical issues or other factors may have interrupted your booking process. If you need assistance or wish to try again, please visit our website or contact our customer service team.</p>
                                                    <p>Please note that without a completed payment, we cannot guarantee the availability of your initial selection.</p>
                                                    <p>Thank you for working with us  and we look forward to serving you soon.</p>
                                                    <p>Best regards,<br>Globe Wander.INC</p>


                                                    </div>
                                                </div>
                                        <div class="col-md-12">
                                            <div class="form-btn">
                                                <p>Booking info:</p>
                                                <p>Start-Date :@Model.StartDate</p>
                                                <p>End-Date :@Model.EndDate</p>
                                                <p>Duration :@Model.Duration</p>
                                                <p>TotalPrice :$@Model.TotalPrice </p>
                                                <p>All Amounts Paid </p>
                                            </div>
                                        </div>
                                            </div>
                                      
                                    </div>
                                </div>
                            </div>
                        
                        </div>
                    </div>
              
    </section>
 