@model Globe_Wander_Final.Models.ViewModels.TripAndBookingTrip
<!-- header ends -->
<!-- Breadcrumb -->
<section class="breadcrumb-outer text-center">
    <div class="container">
        <div class="breadcrumb-content">
            <h2 class="white">Hotel Booking</h2>
            <nav aria-label="breadcrumb">
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Hotel Booking</li>
                </ul>
            </nav>
        </div>
    </div>
    <div class="overlay"></div>
</section>
<!-- BreadCrumb Ends -->
<!-- booking starts -->
<section class="booking">
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-xs-12">
                <div class="price-tabmain">
                    <div class="price-navtab text-center mar-bottom-30">
                    </div>

                    <div class="tab-content">
                        <div id="customer">
                            <div class="booking-box">
                                <div class="customer-information">
                                    <h3>Let us know who you are</h3>
                                    <form method="post" asp-action="BookingForm">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label>CHECK-IN</label>
                                                    <input asp-for="NewBookingTripDTO.StartDate" type="date" placeholder="YYYY-MM-DD" min="@DateTime.Now.ToString("yyyy-MM-dd")" id="CheckIn">
                                                    <input asp-for=NewBookingTripDTO.TripID hidden type="number" value="@Model.TripDTO.Id">
                                                    
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label>CHECK-OUT</label>
                                                    <input asp-for=NewBookingTripDTO.EndDate type="date" placeholder="YYYY-MM-DD" id="CheckOut">

                                                </div>
                                            </div>

                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label>CHECK-IN</label>
                                                   
                                                    <input asp-for=NewBookingTripDTO.NumberOfPersons min=1 type="number">

                                                </div>
                                            </div>

                                            <div class="col-md-12">
                                                <div class="form-btn">
                                                    <button type="submit" class="biz-btn biz-btn1 mar-top-5">Payment</button>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <div class="col-md-4 col-xs-12">
                <div class="booking-sidebar">
                    <div class="book-sidebar-title">
                        <div class="sidebar-videos about-slider">
                            <article class="post mar-bottom-20">
                                <div class="content-image">
                                    @foreach (var image in Model.TripDTO.TripImages.Take(1))
                                    {
                                        <img src="@image.Path" alt="@Model.TripDTO.Name">
                                    }
                                </div>
                                <div class="content-list mar-top-15">
                                    <div class="date mar-bottom-5">Jun 28, 2019</div>
                                    <h4 class="mar-0"><a href="blog-single.html">Takes on Baboon, and It Doesn’t Go Well for It</a></h4>
                                </div>

                            </article>


                        </div>
                    </div>
                     <div class="sidebar-booking">
                        <h4>Booking Detail</h4>
                        <table>
                            <tr>
                                <td>Name</td>
                                <td>@Model.TripDTO.Name</td>
                            </tr>
                            <tr>
                                <td>Description</td>

                                <td>@Model.TripDTO.Description</td>
                            </tr>
                            <tr>
                                <td>Activity</td>
                                <td>@Model.TripDTO.Activity</td>
                            </tr>
                            <tr>
                                <td>Price Per-Person</td>
                                <td>@Model.TripDTO.Cost $</td>

                            </tr>
                        </table>
                    </div> 

                </div>
            </div>
        </div>
    </div>

</section>
<!-- booking Ends -->
<!-- Back to top start -->
<div id="back-to-top">
    <a href="#"></a>
</div>
<!-- Back to top ends -->
<!-- search popup -->
<script>
    var CheckIn = document.getElementById("CheckIn");
    var CheckOut = document.getElementById("CheckOut");

    CheckIn.addEventListener("change", function () {
        var checkInDate = new Date(CheckIn.value);
        var nextDay = new Date(checkInDate);
        nextDay.setDate(checkInDate.getDate() + 1);

        var year = nextDay.getFullYear();
        var month = String(nextDay.getMonth() + 1).padStart(2, '0');
        var day = String(nextDay.getDate()).padStart(2, '0');

        var formattedDate = year + '-' + month + '-' + day;
        CheckOut.min = formattedDate;
    });
</script>
