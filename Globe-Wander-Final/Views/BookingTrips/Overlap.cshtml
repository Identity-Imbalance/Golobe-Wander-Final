@model Globe_Wander_Final.Models.DTOs.BookingTripDTO


<!-- Breadcrumb -->
<section class="breadcrumb-outer text-center">
    <div class="container">
        <div class="breadcrumb-content">
            <h2 class="white">Trip Booking</h2>
            <nav aria-label="breadcrumb">
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Trip Booking</li>
                </ul>
            </nav>
        </div>
    </div>
    <img style="object-fit:cover;" class="overlay" src="https://globewanderimages.blob.core.windows.net/globe-wander-images/pannertrip.jpg" alt="image" />
</section>
<!-- BreadCrumb Ends -->
<head>
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
</head>
<!-- booking starts -->
<section class="booking">

    <div class="tab-content">
        <div class="tab-content centered-card">
            <!-- Add a class to the container -->
                        <div id="customer">
                <div class="booking-box" style="margin:60px;width:900px;">
                                <div class="customer-information">
                                    <h3 style="color:red">Your Booking Failed</h3>

                                    
                                        <div class="col-md-12">
                                            <div class="form-btn">
                                                <p>Dear @User.Identity.Name,</p>
                                               <p>We are sorry to inform you that your lates progress for booking had failed for overlaping reasons with the booking info below</p>
                                                <p>If you have any further requests or need assistance, please do not hesitate to visit our website or contact our customer service team.</p>
                                                <p>Thank you once again for working with us. We look forward to serving you in the future.</p>
                                                <p>Best regards,<br>Globe Wander</p>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="form-btn">
                                                <p>Booking info:</p>
                                                <p>Start-Date :@Model.StartDate</p>
                                                <p>End-Date :@Model.EndDate</p>
                                    
                                                <p>TotalPrice : $@Model.TotalPrice </p>

                                             
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>

                    </div>
             
</section>
