@model Globe_Wander_Final.Models.DTOs.newTourSpotDTO
@{
    Layout = "_DashboardLayout";
}
<div id="preloader">
    <div id="status"></div>
</div>
<div id="container-wrapper">
    <!-- Dashboard -->
    <div id="dashboard">

        <div class="dashboard-content">
            <div class="add-box">
                <div class="add-content">
                    <h3>Hotel Information</h3>
                    <form id="TourForm" method="post" asp-controller="TourSpots" asp-action="CreateTourSpot" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-sm-12">
                                <label asp-for="Name">Name</label>
                                <input type="text" asp-for="Name" placeholder="Enter Tour Spot Name" required>
                                <span asp-validation-for="Name" class="text-danger"></span>

                            </div>
                            <div class="col-sm-12">
                                <label asp-for="Country">Country</label>
                                <input asp-for="Country" placeholder="Enter Tour Spot Country" required />
                                <span asp-validation-for="Country" class="text-danger"></span>

                            </div>
                            <div class="col-sm-12">
                                <label asp-for="City">City</label>
                                <input asp-for="City" placeholder="Enter Tour Spot City" required>
                                <span asp-validation-for="City" class="text-danger"></span>

                            </div>
                            <div class="col-sm-12">
                                <label asp-for="Description">Description</label>
                                <input asp-for="Description" placeholder="Enter Tour Spot Description" required>
                                <span asp-validation-for="Description" class="text-danger"></span>

                            </div>
                            <div class="col-sm-12">
                                <label asp-for="Category">Tour Layout</label>
                                <select asp-for="Category" placeholder="Select Tour Category" required>
                                    <option value="">Select a Category</option>
                                    @foreach (Category category in Enum.GetValues(typeof(Category)))
                                    {
                                        var categoryValue = (int)category;
                                        <option value="@categoryValue">@category.ToString()</option>
                                    }
                                </select>
                                <span asp-validation-for="Category" class="text-danger"></span>

                            </div>
                            <div class="col-sm-12">
                                <label asp-for="PhoneNumber">PhoneNumber</label>
                                <input asp-for="PhoneNumber" placeholder="Enter Tour PhoneNumber" required>
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="add-box add-rooms">

                            <div class="row">
                                <div class="col-md-6 col-xs-12">
                                    <div class="rooms-info">
                                        <h4>Add Gallery Images</h4>
                                        <span class="text-danger">Not required</span>
                                        <div class="image-add">
                                            <input type="file" name="image" accept=".png, .jpg, .jpeg">
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-sm-12">
                                <div class="form-btn">
                                    <button type="submit" class="biz-btn biz-btn1 mar-top-5">Create Tour</button>
                                </div>
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- Dashboard / End -->
</div>
<!-- end Container Wrapper -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}