    <section class="banner ver-banner">
        <div class="slider">
            <div class="swiper-container">
                <div class="swiper-wrapper">
                    @foreach(var item in Model.Take(3)){
                    <div class="swiper-slide">
                        <div class="slide-inner">
                            @foreach (var image in item.HotelImages.Take(1))
                            {
                              
                                <div class="slide-image" style="background-image:url(@image.Path)"></div>
                            }

                      
                            <div class="swiper-content">
                                <h1>Welcome to <span>@item.Name Hotel</span></h1>
                                <p class="mar-bottom-30">@item.Description </p>
                                  <a asp-area="" asp-controller="Hotels" asp-action="SingleHotel" asp-route-id="@item.Id"  class ="biz-btn">Explore More</a>
                           
                            </div>
                            <div class="overlay"></div>
                        </div>
                    </div>}
               
                </div>
