<!-- Trending Starts -->
<section class="trending bg-grey">
    <div class="container">
        <div class="section-title">
            <h2><span>Recommended</span> Hotels</h2>
            <p>this a re the hotels that you can book from our website.</p>
        </div>
        <div class="trend-box">
            <div class="row mix tour">
                @foreach(var item in Model){


                   
                    <div class="col-md-4 col-sm-6 col-xs-12 mar-bottom-30">
               
                     <div class="trend-item">
                        
                        <div class="trend-image">
                                @foreach (var image in item.HotelImages.Take(1))
                                {
                                    <img src="@image.Path" alt="@item.Name">
                                }

                        </div>
                      <a asp-area="" asp-controller="Hotels" asp-action="SingleHotel" asp-route-id="@item.Id">  
                          <div class="trend-content">
                            <p><i class="flaticon-location-pin"></i> @item.Name</p>
                                <h4> @item.Description</h4>
                                <p>
                                   
                                </p>
                            <div class="rating mar-bottom-15">
                                        @for (int a = item.StarRate;a > 0;a--)
                                {
                                <span class="fa fa-star checked"></span>
                                
                                }
                          
                            </div>
                           
                            <p class="mar-0"><i class="fa fa-clock-o" aria-hidden="true"></i> @item.HotelRoom.Where(x=>x.IsAvailable == true).Count().ToString() rooms are available</p>
                                </div>
                            </a>
                    </div> 
                        </div>
            
           }
              
            </div>
        </div>
    </div>
</section>
<!-- Trending Ends -->
    <!-- Rooms starts -->
    <section class="rooms">
        <div class="container">
            <div class="section-title">
                <h2>Explore <span>Rooms</span></h2>
            <p>this a re the Rooms that you can book from our website.</p>
            </div>
            <div class="room-outer">
                <div class="row">
                    @foreach(var items in Model ){
                    @foreach (var item in items.HotelRoom)
                    {
                    
                            <div class="col-md-4 col-sm-12 col-xs-12">
                            <a asp-area="" asp-controller="HotelRooms" asp-action="SingleRoom" asp-route-Id="@item.HotelID" asp-route-RoomNumber="@item.RoomNumber">
                                <div class="room-item">
                                <div class="room-image">
                                        @foreach (var image in item.HotelRoomImages.Take(1))
                                        {
                                            <img src="@image.Path" alt="@item.Rooms.Name">
                                        }

                                    </div>
                                <div class="room-content1">
                                    <div class="room-title">
                                            <h3>@items.Name</h3>
                                            <h3>@item.Rooms.Name</h3>
                                        <p>@item.PricePerDay</p>
                                      
                                    </div>
                                    <div class="room-services mar-bottom-15">
                                        <ul>
                                            <li><i class="fa fa-bed" aria-hidden="true"></i>@item.Rooms.Layout</li>
                                          
                                        </ul>
                                    </div>
                                  
                                    <div class="room-btns mar-top-20">

                                            <a asp-area="" asp-controller="HotelRooms" asp-action="SingleRoom" asp-route-Id="@item.HotelID" asp-route-RoomNumber="@item.RoomNumber" class="biz-btn-black">BOOK NOW</a>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                    }

                }
            </div>
            </div>
        </div>
    </section>
