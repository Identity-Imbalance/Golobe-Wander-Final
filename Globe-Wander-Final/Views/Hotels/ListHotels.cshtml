@model List<Globe_Wander_Final.Models.DTOs.HotelDTO>
@{
}

<div id="container-wrapper">
    <!-- Dashboard -->
    <div id="dashboard">
        <partial name="_Navigation"></partial>

        <div class="dashboard-content">
            <div class="list-outer">
                @* this should be responsive *@
               @foreach (var item in Model)
                {

                    <div class="list-item-1">
                        <div class="row display-flex">
                        <div class="col-md-4 col-sm-12">
                            <div class="list-image1">
                                @* <img src="@item.ImageURL" alt="@item.Name"> *@
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-12">
                            <div class="list-content">
                                <div class="list-rating">
                                    <div class="rating">
                                            @for (int i = 0; i < item.StarRate; i++)
                                            {
                                                <span class="fa fa-star checked"></span>
                                            }
                                    </div>
                                </div>
                                <h3><a asp-action="HotelDetailAdmin">@item.Name</a></h3>
                                   <p>
                                       @item.Location
                                   </p>
                                   <p>
                                       @item.Description
                                   </p>
                                     @* <p class="price">From <span></span>                                             
                                 night</p>
                                *@
                            </div>
                        </div>
                        <div class="col-md-2 col-sm-12">
                            
                                <a asp-controller="Hotels" asp-action="EditHotel" asp-route-id="@item.Id" class="biz-btn biz-btn1 mar-top-5">Edit</a>
                                @* <a asp-controller="Hotels" asp-action="DeleteHotel" asp-route-id="@item.Id"  class="biz-btn biz-btn1 mar-top-5">Delete</a> *@
                                <a type="button" class="biz-btn biz-btn1 mar-top-5" data-bs-toggle="modal" data-bs-target="#staticBackdrop" data-id="@item.Id">
                                    <span>Delete</span>
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                                <partial name="_DeleteHotelPartial" model="@item">

                            
                        </div>
                    </div>

                </div>
                }
                <div class="pagination-content text-center">
                    <ul class="pagination">
                        <li><a href="#"><i class="fa fa-angle-double-left" aria-hidden="true"></i></a></li>
                        <li class="active"><a href="#">1</a></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">4</a></li>
                        <li><a href="#"><i class="fa fa-angle-double-right" aria-hidden="true"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>

    </div>

    <!-- end Container Wrapper -->
</div>
